<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/background"
        android:height="2000dp">
        <shape>
            <padding android:top="8dp" />
            <solid android:color="?attr/colorSurfaceContainer" />
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp"/>
        </shape>
    </item>
    <item
        android:id="@+id/dragHandler"
        android:width="@dimen/def_sheet_handle_w"
        android:height="@dimen/def_sheet_handle_h"
        android:gravity="center|top">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOutline" />
            <corners android:radius="100dp" />
        </shape>
    </item>

</layer-list>
