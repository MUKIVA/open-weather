<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/def_v_padding">

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeWidth="@dimen/def_cardview_stroke_width"
        app:strokeColor="?attr/colorPrimary"
        app:cardCornerRadius="@dimen/def_radius"
        app:cardElevation="@dimen/def_max_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fieldValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                app:drawableTint="?attr/colorPrimary"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                tools:text="100" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/def_cardview_stroke_width"
                android:background="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                tools:text="Subtitle"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>



